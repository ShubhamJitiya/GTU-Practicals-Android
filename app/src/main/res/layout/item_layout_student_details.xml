<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.cardview.CircularRevealCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.Material3.CardView.Outlined"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginVertical="8dp"
        android:layout_marginEnd="8dp"
        >

        <ImageView
            android:id="@+id/student_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/student_name"
            android:layout_alignBottom="@id/student_address"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="false"
            android:layout_marginEnd="16dp"
            android:baselineAlignBottom="false"
            android:src="@drawable/student_img1" />

        <TextView
            android:id="@+id/student_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/student_image"
            android:fontFamily="@font/poppins_medium"
            android:paddingEnd="16dp"
            android:text="Devon Lane"
            android:textColor="@color/dark_purple"
            android:textSize="@dimen/header_3" />

        <ImageView
            android:id="@+id/ic_delete_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="4dp"
            android:src="@drawable/ic_trash_bin" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/student_details_divider"
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:layout_below="@id/student_name"
            android:layout_alignEnd="@id/student_name"
            android:layout_toEndOf="@id/student_image"
            app:dividerColor="@color/light_grey2" />

        <TextView
            android:id="@+id/student_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/student_details_divider"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="-24dp"
            android:layout_toStartOf="@+id/ic_delete_student"
            android:layout_toEndOf="@id/student_image"
            android:fontFamily="@font/poppins"
            android:text="2972 Westheimer Rd. Santa Ana, Illinois 85486 " />

    </RelativeLayout>
</com.google.android.material.circularreveal.cardview.CircularRevealCardView>